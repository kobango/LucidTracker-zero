@model IEnumerable<WebApplication2.Models.NotesViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Lista notatek</h2>

<p>
    @Html.ActionLink("Stwórz nową notatkę", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Temat")
        </th>
        <th>
            @Html.DisplayName("Tekst")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Thema)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.Id }) |
           
            @Html.ActionLink("Usuń", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
